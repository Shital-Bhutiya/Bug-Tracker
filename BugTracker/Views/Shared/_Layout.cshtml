@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bug Tracker</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Minimal Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <link href="~/Content/bootstrap.min.css" rel='stylesheet' type='text/css' />

    <!-- Custom Theme files -->
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <!-- Mainly scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.metisMenu.js"></script>
    <script src="~/Scripts/jquery.slimscroll.min.js"></script>
    <!-- Custom and plugin javascript -->
    <link href="~/Content/custom.css" rel="stylesheet" />
    <script src="~/Scripts/custom.js"></script>
    <script src="~/Scripts/screenfull.js"></script>
    <script>
        $(function () {
            $('#supported').text('Supported/allowed: ' + !!screenfull.enabled);

            if (!screenfull.enabled) {
                return false;
            }



            $('#toggle').click(function () {
                screenfull.toggle($('#container')[0]);
            });



        });
    </script>

    <!----->
    <!--pie-chart--->
    <script src="@Url.Content("~/Scripts/pie-chart.js")"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#demo-pie-1').pieChart({
                barColor: '#3bb2d0',
                trackColor: '#eee',
                lineCap: 'round',
                lineWidth: 8,
                onStep: function (from, to, percent) {
                    $(this.element).find('.pie-value').text(Math.round(percent) + '%');
                }
            });

            $('#demo-pie-2').pieChart({
                barColor: '#fbb03b',
                trackColor: '#eee',
                lineCap: 'butt',
                lineWidth: 8,
                onStep: function (from, to, percent) {
                    $(this.element).find('.pie-value').text(Math.round(percent) + '%');
                }
            });

            $('#demo-pie-3').pieChart({
                barColor: '#ed6498',
                trackColor: '#eee',
                lineCap: 'square',
                lineWidth: 8,
                onStep: function (from, to, percent) {
                    $(this.element).find('.pie-value').text(Math.round(percent) + '%');
                }
            });


        });

    </script>
    <!--skycons-icons-->
    <script src="~/Scripts/skycons.js"></script>
    <!--//skycons-icons-->
</head>
<body>
    <div id="wrapper">
        <nav class="navbar-default navbar-static-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1> <a class="navbar-brand" href="@Url.Action("Index","Home")">Bug Tracker</a></h1>
            </div>
            <div class=" border-bottom">
                <div class="full-left">
                    <section class="full-top">
                        <button id="toggle"><i class="fa fa-arrows-alt"></i></button>

                    </section>

                    <div class="nav  navbar-left-right">
                        @Html.Partial("_LoginPartial")
                    </div>
                    <div class="clearfix"> </div>
                </div>

            </div>

            <!-- Brand and toggle get grouped for better mobile display -->
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

            </div><!-- /.navbar-collapse -->
            <div class="clearfix">

            </div>

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="@Url.Action("Index","Home")" class=" hvr-bounce-to-right"><i class="fa fa-dashboard nav_icon "></i><span class="nav-label">Dashboards</span> </a>
                        </li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                        {
                            <li>
                                <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-indent nav_icon"></i> <span class="nav-label">Projects</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="@Url.Action("Index", "Projects")" class=" hvr-bounce-to-right"> <i class="fa fa-area-chart nav_icon"></i>All Projects</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-desktop nav_icon"></i> <span class="nav-label">Admin Functions</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="@Url.Action("Index", "ApplicationUsers")" class=" hvr-bounce-to-right"> <i class="fa fa-info-circle nav_icon"></i>Change Role</a></li>
                                </ul>
                            </li>
                        } @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="@Url.Action("Index","Manage")" class=" hvr-bounce-to-right"><i class="fa fa-user nav_icon "></i><span class="nav-label">Edit Pofile</span> </a>
                            </li>

                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>
                                <a href="#" class=" hvr-bounce-to-right"><i class="fa fa-desktop nav_icon"></i> <span class="nav-label">Tickets</span><span class="fa arrow"></span></a>
                                <ul class="nav nav-second-level">
                                    <li><a href="@Url.Action("Index", "Tickets")" class=" hvr-bounce-to-right"> <i class="fa fa-info-circle nav_icon"></i>All Tickets</a></li>
                                </ul>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper" class="gray-bg dashbard-1">


            @RenderBody()
            <hr />
        </div>
        <div class="copy-right">
            <p> &copy; 2018 Bug Tracker. All Rights Reserved | Design by Shital Bhutiya</p>
        </div>
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/jquery.nicescroll.js"></script>
        <script src="~/Scripts/scripts.js"></script>
        <!--//scrolling js-->
        <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
